# ============================================
# InsumoDent — Variables de entorno
# Copiá este archivo como .env y completá los valores
# ============================================

# --- PostgreSQL ---
POSTGRES_USER=insumodent
POSTGRES_PASSWORD=insumodent_dev
POSTGRES_DB=insumodent
POSTGRES_PORT=5432
DATABASE_URL=postgresql://insumodent:insumodent_dev@localhost:5432/insumodent?schema=public

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# --- Meilisearch ---
MEILI_HOST=http://localhost:7700
MEILI_PORT=7700
MEILI_MASTER_KEY=insumodent_meili_dev_key

# --- NextAuth.js ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=tu-secret-aqui-cambiar-en-produccion

# --- Google OAuth (NextAuth provider) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- SendGrid (emails) ---
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=alertas@insumodent.com.ar

# --- API Backend ---
API_URL=http://localhost:4000
API_PORT=4000

# --- Frontend ---
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_MEILI_HOST=http://localhost:7700
NEXT_PUBLIC_MEILI_KEY=insumodent_meili_dev_key

# --- General ---
NODE_ENV=development
